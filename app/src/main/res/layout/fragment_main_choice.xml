<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.spc.marthacombo.MainChoiceFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/tvMainTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="@dimen/display_size_1"
        android:text="@string/tvMainTitle"
        android:textSize="@dimen/text_size_5" />

    <ImageView
        android:id="@+id/ivMainImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMainTitle"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:contentDescription="@string/ivMainImage"
        android:scaleType="centerInside"
        android:src="@drawable/martha" />

    <ImageButton
        android:id="@+id/ibMathsButton"
        android:layout_width="@dimen/display_size_9"
        android:layout_height="@dimen/display_size_9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/display_size_4"
        android:layout_marginStart="@dimen/display_size_4"
        android:background="@drawable/maths_button"
        android:contentDescription="@string/ibMathsButton" />

    <ImageButton
        android:id="@+id/ibSpellingButton"
        android:layout_width="@dimen/display_size_9"
        android:layout_height="@dimen/display_size_9"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/display_size_4"
        android:layout_marginEnd="@dimen/display_size_4"
        android:background="@drawable/spelling_button"
        android:contentDescription="@string/ibSpellingButton" />

</RelativeLayout>
